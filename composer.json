{
    "name": "redot/datatables",
    "description": "Datatables for Redot Dashboard",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdelrhman Said",
            "email": "abdelrhmansaidzaki@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Redot\\Datatables\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Redot\\Datatables\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "laravel/framework": "^11.0|^12.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.21",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.7"
    },
    "suggest": {
        "maatwebsite/excel": "Allow exporting data to multiple formats",
        "carlos-meneses/laravel-mpdf": "Laravel wrapper for mPDF library, used to generate PDFs",
        "barryvdh/laravel-dompdf": "A DOMPDF Wrapper for Laravel, used to generate PDFs"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint",
        "test": "vendor/bin/pest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Redot\\Datatables\\DatatablesServiceProvider"
            ]
        }
    }
}
